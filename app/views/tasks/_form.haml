= form_for(@task, remote: true, :html => { :role => "form", multipart: true }) do |f|
  #error_explanation.bg-danger.text-danger
  .row  
    .col-sm-12
      .form-group
        = f.label :name, :class => "control-label"
        = f.text_field :name, :class => "form-control first_input"
        = f.label :attachment, :class => "control-label"
        = f.file_field :attachment, :class => "form-control first_input"
        = f.hidden_field :completed, value: false
        = f.label 'Tags', :class => "control-label"
        = f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb|
          = cb.label(class: 'checkbox-inline') { cb.check_box(class: 'checkbox')+ cb.text}
    .col-sm-12
      .form-group
        = f.submit "Save", class: "btn btn-primary"